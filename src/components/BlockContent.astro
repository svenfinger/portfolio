---
import { PortableText } from 'astro-portabletext'
import Body from './portable_text/Body.astro'
import Hero from './portable_text/Hero.astro'
import TwoColumn from './portable_text/TwoColumn.astro'
import ImageGrid from './portable_text/ImageGrid.astro'
import List from './portable_text/List.astro'
import ExperienceList from './portable_text/ExperienceList.astro'
import WorkMedia from './portable_text/WorkMedia.astro'
import WorkMediaGrid from './portable_text/WorkMediaGrid.astro'
import FeaturedWork from './portable_text/FeaturedWork.astro'

const { value } = Astro.props

const components = {
  type: {
    hero: Hero,
    body: Body,
    twoColumn: TwoColumn,
    imageGrid: ImageGrid,
    list: List,
    experienceList: ExperienceList,
    workMedia: WorkMedia,
    workMediaGrid: WorkMediaGrid,
    featuredWork: FeaturedWork,
  }
}
---

<PortableText value={value} components={components} />
