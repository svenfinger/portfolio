---
import { urlFor } from '../../lib/sanityImage'
import Media from '../Media.astro';

const { node } = Astro.props;
const mediaItems = node.mediaItems;

type SanityMediaWithAlt = {
  asset: {
    _ref: string;
    _type: 'reference';
  };
  alt?: string;
};
---
<section class="pb-48">
  <div class="grid sm:grid-cols-2 gap-6">
    {mediaItems.map((image: SanityMediaWithAlt) => (
      <Media>
        <img
          src={urlFor(image).width(684).format('webp').url()}
          srcset={`
            ${urlFor(image).width(684).format('webp').url()} 684w,
            ${urlFor(image).width(1368).format('webp').url()} 1368w,
          `}
          sizes="(max-width: 1440px) 100vw, 684px"
          alt={image.alt || ''}
          loading="lazy"
          decoding="async"
          slot="media"
          class="w-full h-auto"
        />
      </Media>
    ))}
  </div>
  <div class="grid sm:grid-cols-2 sm:gap-6 sm:mt-6 pt-6 sm:border-t border-gray-200 dark:border-gray-800">
    <div></div>
    <p>{node.text}</p>
  </div>
</section>
